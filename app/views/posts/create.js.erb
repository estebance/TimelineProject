<% if @post.errors.any? %>
  Materialize.toast("<%= j @post.errors.full_messages.join(', ') %>", 4000);
<% else %>
  $(".user_posts").prepend("<%= j render 'users/post_element', {post: @post, comment: @comment}%>");
  $('.comment_form').hide();
  $('.create_comment').click(function(){
    $("#comment_post_<%=@post.id%>_form").show();
  });

<% end %>