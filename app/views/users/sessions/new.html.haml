- content_for :stylesheets do
  #header_id { display: none }
%section.slice.background-people
  %br
  %br
  .wp-section
    .container
      .row
        .col-md-4.col-md-offset-2.col-sm-6.col-sm-offset-3
          .wp-block.default.user-form.entrepreneur-wp
            .form-header.center-align
              %h2 Log in
              = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
                .z-depth-1.grey.lighten-4.row{:style => "display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE; width: 380px"}
                  %form.col.s12{:method => "post"}
                    .row
                      .col.s12
                    .row
                      .input-field.col.s12
                        = f.label :email
                        %br/
                        = f.email_field :email, autofocus: true, class: "validate"
                    .row
                      .input-field.col.s12
                        = f.label :password
                        %br/
                        = f.password_field :password, autocomplete: "off", class: "validate"
                      - if devise_mapping.rememberable?
                      .field
                        = f.check_box :remember_me
                        = f.label :remember_me, 'remember me'
                    .row
                      .actions
                        = f.submit "Log in", class: "btn col s12 btn-large indigo"
                    = render 'users/shared/links'
                      %label{:style => "float: right;"}
                    %br/
